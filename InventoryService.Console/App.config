<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="akka" type="Akka.Configuration.Hocon.AkkaConfigurationSection, Akka" />
  </configSections>
  <appSettings>
    <add key="StorageConnectionString" value="UseDevelopmentStorage=true" />
    <!--<add key="RemoteInventoryActorAddress" value="akka.tcp://InventoryService-Server@localhost:8099/user/InventoryActor" />-->
    <add key="RemoteInventoryActorAddress" value="akka.tcp://InventoryService-Server@localhost:10000/user/InventoryActor" />
  </appSettings>
  <akka>
    <hocon>
      <![CDATA[
akka {
    actor {
        serializers {
							    wire = "Akka.Serialization.WireSerializer, Akka.Serialization.Wire"
							}

							serialization-bindings {
							    "System.Object" = wire
							}
        provider = "Akka.Remote.RemoteActorRefProvider, Akka.Remote"

        debug {
            receive = on
            autoreceive = on
            lifecycle = on
            event-stream = on
            unhandled = on
        }
    }

    remote {
                helios.tcp {
                    port = 0
                     hostname =localhost
                }
            }
}
      ]]>
    </hocon>
  </akka>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-9.0.0.0" newVersion="9.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>